{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es2017",
      "moduleResolution": "Node",
      "declaration": true,
      "outDir": "dist",
      "strict": true,
      "noImplicitReturns": true,
      "allowSyntheticDefaultImports": true,
      "strictNullChecks": true,
      "allowUnreachableCode": false,
      "forceConsistentCasingInFileNames": true
    }
}